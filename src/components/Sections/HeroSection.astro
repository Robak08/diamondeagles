---
import { Button, buttonVariants } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Separator } from "@/components/ui/separator";

import {
	ArrowRight,
	Crown,
	ArrowUpRight,
	TrendingUp,
	LayoutPanelLeft,
} from "@lucide/astro";
import { Picture } from "astro:assets";
import heroImage from "@/assets/de_hero.png";
import statueImage from "@/assets/de_statue.png";
---

<section id="hero" class="container">
	<div class="grid items-center gap-8 md:grid-cols-[0.75fr_1fr]">
		<div
			class="flex flex-col items-center gap-2 md:gap-3 lg:gap-4 text-center lg:items-start lg:text-left pb-8 md:pb-2"
		>
			<Badge variant="outline">
				<span class="-mt-1">ðŸ‘‘</span> Local Leaders
				<ArrowUpRight class="ml-2 size-4" />
			</Badge>

			<h1 class="my-6 text-5xl font-bold text-pretty md:text-6xl">
				Lead the <span
					class="bg-gradient-to-tr from-primary to-primary-darker bg-clip-text text-transparent"
					>Region</span
				>. <span class="inline-block relative"
					>Shape the Future<span
						class="bg-gradient-to-bl from-primary to-primary-darker bg-clip-text text-transparent"
						>.</span
					>
					<!-- <span class="underline-gradient"></span> -->
				</span>
			</h1>
			<p class="mb-8 max-w-xl text-muted-foreground md:text-xl">
				Join Eagles to ensure Your customers receive top-quality products and
				services.
			</p>
			<div
				class="flex w-full flex-col justify-center gap-2 sm:flex-row lg:justify-start"
			>
				<Button
					variant="default"
					className="bg-linear-to-br from-primary to-primary-darker"
				>
					<a href="/contact" title="Become Eagle"> Become an Eagle </a>
				</Button>
				<div class="flex items-center gap-3">
					<Separator className="flex-1 !w-6" />
					<span class="text-muted-foreground">or</span>
					<Separator className="flex-1 !w-6" />
				</div>
				<Button variant="outline">
					<a href="#about" title="About us">
						Learn more <ArrowRight class="size-4 ml-1 inline" />
					</a>
				</Button>
			</div>
		</div>
		<div class="mx-auto">
			<div

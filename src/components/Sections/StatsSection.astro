---
import { StatCard } from "@components/StatCard.tsx";

import { Flame, FileSearch, ChartNoAxesCombined } from "@lucide/astro";
---

<section class="stats-wrap">
	<div class="stats-card" title="593,504 evaluated companies">
		<StatCard
			stat="593,504"
			text="evaluated companies"
			duration={3500}
			client:visible
		>
			<ChartNoAxesCombined size="36" slot="icon" />
		</StatCard>
	</div>
	<div class="stats-card" title="293,482 customer ratings">
		<StatCard
			stat="293,482"
			text="customer ratings"
			duration={2800}
			client:visible
		>
			<Flame size="36" slot="icon" />
		</StatCard>
	</div>
	<div class="stats-card" title="393,504 reviewed pages">
		<StatCard stat="393,504" text="reviewed pages" duration={4200} client:visible>
			<FileSearch size="36" slot="icon" />
		</StatCard>
	</div>
</section>

<style lang="postcss">
	@reference '@styles/app.css';
	.stats-wrap {
		@apply grid grid-cols-1 justify-items-center gap-6 md:gap-4 md:grid-cols-2 lg:grid-cols-3 lg:gap-x-14;
		@apply md:max-w-[75vw] 2xl:max-w-[60vw] mx-auto;
		@apply py-6 lg:py-10 xl:pb-16;
		.stats-card {
			@apply block w-full max-w-[320px] select-none;
		}
	}
</style>
